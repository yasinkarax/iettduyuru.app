{
 "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
     "ES2020"
    ],
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
     "@/*": ["./src/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
 },
 "include": [
    "src/**/*.ts"
 ],
 "exclude": [
    "node_modules",
    "dist"
 ]
}
